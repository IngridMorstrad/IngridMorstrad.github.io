# To replace image.html (images with captions)
/{% include image.html url="\([^"]*\)" description="\([^"]*\)" %}/{{< figure src="\1" title="\2" >}}/g
# To replace img src
s/<img src="{{ site.url }}\([^"]*\)">/![](\1)/g
# To replace multiple files
# sed -i 's/a/b/g' $(find . -name '*.markdown')
